<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.register.PAChainFaceRecognitionActivity">
    <include layout="@layout/pachain_ui_topnavigation_back"/>
    <com.pachain.android.widget.RoundTextureView
        android:id="@+id/round_texture_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.pachain.android.widget.CircleTextureBorderView
        android:id="@+id/border_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/border_view"
        android:text="@string/register_faceRecognitionTip"/>

    <TextView
        android:id="@+id/tv_takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="@string/register_takePhoto"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/pachain_shape_button_solidfilletblue"
        app:layout_constraintTop_toBottomOf="@id/border_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>